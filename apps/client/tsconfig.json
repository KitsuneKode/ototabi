{
  "extends": "@ototabi/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@ototabi/ui": [
        "../../packages/ui/src/*"
      ],
      "@ototabi/store": [
        "../../packages/store/src/*"
      ],
      "@ototabi/auth": [
        "../../packages/auth/src/*"
      ],
      "@ototabi/trpc": [
        "../../packages/trpc/src/*"
      ],
      "@ototabi/common": [
        "../../packages/common/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
